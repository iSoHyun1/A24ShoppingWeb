@model ProductModel
@{
    ViewData["title"] = "Edit Product";
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success notification">
        @TempData["success"]
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger notification">
        @TempData["error"]
    </div>
}

<div class="container mt-5">
    <h4 class="mb-4">Edit Product</h4>
    <div class="col-md-9">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group">
                <label for="Name">Name</label>
                <input asp-for="Name" class="form-control" id="Name" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label for="Price">Price</label>
                <input asp-for="Price" class="form-control" id="Price" />
                <span asp-validation-for="Price" class="text-danger" />
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" id="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
            <div class="form-group">
                <label for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" id="CategoryId">
                    <option value="">--Choose a category--</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger" />
            </div>
            <div class="form-group">
                <label for="ImageUpload">Image</label>
                <input asp-for="ImageUpload" class="form-control-file" id="ImageUpload" />
                <span asp-validation-for="ImageUpload" class="text-danger" />
                <img src="~/media/products/@Model.Image" width="120" class="pt-2 img-thumbnail" style="max-width: 200px;" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List Products</a>
            </div>
        </form>
    </div>
</div>

}
