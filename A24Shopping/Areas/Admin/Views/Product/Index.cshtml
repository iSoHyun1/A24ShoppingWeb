@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
}
<div class="container mt-5">
    <h3 class="mb-4">List Products</h3>
    <div class="mb-3">
        <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Add Products</a>
        <a asp-action="Index" asp-controller="Order" class="btn btn-secondary">View Orders</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Category</th>
                <th scope="col">Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C")</td>
                    <td><img src="~/media/products/@item.Image" width="120" class="img-thumbnail"></td>
                    <td>@item.Category.Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id" class="btn btn-danger btn-sm confirmDeletion">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
