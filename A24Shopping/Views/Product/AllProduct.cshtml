<!-- ***** Main Banner Area Start ***** -->
@model IEnumerable<ProductModel>
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Check Our Products</h2>
                    <span>All the fashion products you need are here.</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Products Area Starts ***** -->
<section class="section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Our Latest Products</h2>
                    <span>Check out all of our products.</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="item">
                                <div class="thumb">
                                    <div class="hover-content">
                                        <ul>
                                            <li><a asp-action="Details" asp-controller="Product" asp-route-ID="@item.Id"><i class="fa fa-eye"></i></a></li>
                                        </ul>
                                    </div>
                                    <img src="~/media/products/@item.Image" alt="@item.Name" />
                                </div>
                                <div class="down-content">
                                    <h4>@item.Name</h4>
                                    <span>$@item.Price</span>
                                    <ul>
                                        <a class="btn btn-default add-to-cart" asp-action="Add" asp-controller="Cart" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</section>
<!-- ***** Subscribe Area Ends ***** -->